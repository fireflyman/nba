<% form_for(@lemma) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title,"标题" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body,"正文" %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list,"标签（用中文逗号隔开）" %><br />
    <%= f.text_area :tag_list,:rows=> 2 %>
  </p>
  <% role = Authorization.current_user.role_symbols.to_s  %>
  <% if action_name == "edit" &&  @lemma.contains?(current_user) && ( role == "Supplier"|| role == "Sponsor " ) %>
    <p>
      <%= f.label :point,"修改悬赏分" %><br />
      <%= f.text_field :point %>
    </p>
  <% end %>
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>